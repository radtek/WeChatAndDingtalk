
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="telephone=no" name="format-detection">
    <meta content="email=no" name="format-detection" />
    <title>用户绑定</title>
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/weui.css">
    <link rel="stylesheet" href="~/css/jq-weui-css.css">
    <link rel="stylesheet" href="~/css/phone.css">
    <script type="text/javascript" src="~/scripts/jquery.js"></script>
    <script>
        var PageData = {
            Batch: '@ViewData["Batch"]',
            Type: @ViewData["Type"],//0:登录绑定 1：邮箱绑定
            SendInterval: @ViewData["SendInterval"],//发送邮件间隔
            Email:'@ViewData["Email"]'
        };
    </script>
</head>
<body>
    <div class="login_italent_content">
        <div class="weui_msg" style="display:none;">
            <div class="weui_icon_area">
                @*<i class="weui_icon_success weui_icon_msg italent_platform"> </i>*@
                <img width="160" height="62" src="~/images/italent_pla_pic.png" />

            </div>
            <div class="error_message">
                <i class="error_pic"><img src="~/images/error_message.png" /></i>
                <span class="error_txt"></span>
            </div>
            <div class="weui_text_area">
                <div class="zh_content">
                    <span class="zh_name_pic"><img src="~/images/yonghuming.png"></span>
                    <input class="weui-input zh_name zh_name_txt" type="text" placeholder="邮箱/手机号">
                </div>
                <div class="zh_password_content">
                    <span class="zh_password_pic"><img src="~/images/mima.png"></span>
                    <input class="weui-input zh_name zh_password_txt" type="password" placeholder="密码">
                </div>
                <div class="weui_cell weui_vcode primary_content" style="display:none">
                    <div class="primary_img">
                        <span class="primary_pic"><img src="../images/confirm.png" /></span>
                    </div>
                    @*<div class="weui_cell_hd"><label class="weui_label">验证码</label></div>*@
                    <div class="weui_cell_bd weui_cell_primary">
                        <input class="weui_input primary_input_txt" type="text" placeholder="请输入验证码">
                    </div>
                    <div class="weui_cell_ft">
                        <img src="">
                    </div>
                </div>

            </div>
            <div class="weui_opr_area">
                <p class="weui_btn_area">
                    <a href="javascript:;" class="weui_btn weui_btn_default login_text bind_btn" data-ctime="">登录</a>
                </p>
            </div>
            <div class="weui_extra_area tz_page use_email_pro" data-index="1">
                <a href="###" class="use_email">使用邮箱验证</a>
            </div>
        </div>
        <div class="weui_msg" style="display: none;">
            <div class="weui_icon_area"><i class="weui_icon_success weui_icon_msg login_img"><img class="weui_icon_success weui_icon_msg login_poto_img" src="~/images/touxiang.png"></i></div>
            <div class="error_message">
                <i class="error_pic"><img src="~/images/error_message.png" /></i>
                <span class="error_txt"></span>
            </div>
            <div class="weui_text_area">
                <p class="weui_msg_desc please_email">请输入iTalent账号输入邮箱</p>
                <input class="weui-input txt_email" type="text" placeholder="iTalent账号对应邮箱">
            </div>
            <div class="weui_opr_area">
                <p class="weui_btn_area">
                    <a href="javascript:;" class="weui_btn weui_btn_default send_email_btn bind_btn" data-ctime="" data-index="2">发送验证邮件</a>
                </p>
            </div>
            <div class="weui_extra_area tz_page use_italent" data-index="0">
                <a href="###" class="use_italent_login">使用iTalent帐号登录</a>
            </div>
        </div>
        <div class="weui_msg animated " style="display: none;">
            <div class="weui_icon_area"><i class="weui_icon_success weui_icon_msg login_img"><img class="weui_icon_success weui_icon_msg login_poto_img" src="~/images/touxiang.png"></i></div>
            <div class="weui_text_area">
                <h2 class="weui_msg_title">请查收验证邮件</h2>
                <p class="weui_msg_desc email_send">邮件已发送至您的邮箱，请注意查收</p>
                <p class="weui_msg_desc email_send email_info">@(ViewData["Email"])</p>
            </div>
            <div class="weui_opr_area">
                <p class="weui_btn_area">
                    <a href="javascript:;" class="weui_btn weui_btn_default again_send_btn bind_btn" data-ctime="">再次发送验证邮件<span class="count_con" style="display:none;">（<span class="count_down">@ViewData["SendInterval"]</span>s）</span></a>
                    <a href="javascript:;" class="weui_btn weui_btn_default change_email" data-index="1">更换邮箱</a>
                </p>
            </div>
            <div class="weui_extra_area tz_page use_italent" data-index="0">
                <a href="###" class="use_italent_login">使用iTalent帐号登录</a>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/scripts/fastclick.js"></script>
    <script type="text/javascript" src="~/scripts/jq-weui.js"></script>
    <script type="text/javascript" src="~/scripts/bind.js"></script>
</body>
</html>