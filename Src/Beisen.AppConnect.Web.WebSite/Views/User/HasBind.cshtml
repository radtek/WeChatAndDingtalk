
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="telephone=no" name="format-detection">
    <meta content="email=no" name="format-detection" />
    <title>用户绑定</title>
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/weui.css">
    <link rel="stylesheet" href="~/css/jq-weui-css.css">
    <link rel="stylesheet" href="~/css/phone.css">
    <script type="text/javascript" src="~/scripts/jquery.js"></script>
    <script type="text/javascript" src="~/scripts/fastclick.js"></script>
    <script>
        var PageData = {
            Batch: '@ViewData["Batch"]',
            Type:@ViewData["Type"]
        };
    </script>
</head>
<body>
    <div class="login_italent_content">
        <div class="weui_msg">
            <div class="weui_icon_area"><i class="weui_icon_success weui_icon_msg login_img"><img class="weui_icon_success weui_icon_msg login_poto_img" src="~/images/touxiang.png"></i></div>
            <div class="weui_text_area">
                <h2 class="weui_msg_title">帐号已绑定</h2>
                <p class="weui_msg_desc email_send">邮箱<span class="has_bind_email"></span>对应的账户已经绑定，请使用对应@(ViewData["AppAccountTypeName"])帐号登录。</p>
            </div>
            <div class="weui_opr_area">
                <p class="weui_btn_area">
                    <a href="../user/Bind?type=@(ViewData["Type"])&batch=@(ViewData["Batch"])" class="weui_btn weui_btn_default">返回</a>
                </p>
            </div>
        </div>

    </div>
    <!-- <script type="text/javascript" src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script> -->
    <script type="text/javascript" src="~/scripts/jq-weui.js"></script>
    <script type="text/javascript">
		$(function(){
			//消除ios下click的300毫秒的延迟
		    FastClick.attach(document.body);
		    function getQueryObject() {
		        var hash = window.location.search;
		        // get page location from variable if history fragment is empty
		        var fragmentStr = decodeURIComponent(hash || '');
		        var queryObject = {};
		        var markIndex = fragmentStr.indexOf("?");
	
		        // contain query string in fragments
		        if(markIndex > -1){
		            // build query object
		            var queryString = fragmentStr.slice(markIndex+1);
		            var queryArray = queryString.split('&');
		            for (var i = 0; i < queryArray.length; i++) {
		                var queryPair = queryArray[i].split('=');
		                queryObject[queryPair[0]] = queryPair[1];
		            }
		        }
	
		        return queryObject;
		    }
		    var urlData = getQueryObject();
		    $('.has_bind_email').html(urlData.email);
		})
    </script>
</body>
</html>